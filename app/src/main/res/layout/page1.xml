<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/copper_cayon"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/copper_cayon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/elements"
        android:layout_above="@+id/navbar" android:weightSum="1">

        <ViewSwitcher
            android:background="@color/copper_cayon"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/viewSwitcher2"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/navbar"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:padding="5dp" android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/procedurerunner_previous"
            android:id="@+id/previous"
            android:background="@color/light_blue"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight=".5"
            android:layout_gravity="center_vertical"
            android:padding="5dp"/>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/procedurerunner_next"
            android:id="@+id/next"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:background="@color/goldenrod"
            android:layout_weight=".5"
            android:layout_gravity="center_vertical"
            android:padding="5dp"/>
    </LinearLayout>
</RelativeLayout>